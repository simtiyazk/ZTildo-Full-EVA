@charset "UTF-8";
/* SCSS Document */

@import "../../shared/styles/core/index";


/********** Slide Specific Styles *********/

#{{slideId}} {
    background: url('../images/background.png') right 0 no-repeat;
    background-size: contain;
}

.slide__cta {
   position: absolute;

   a {
      display: block;
      width: 100%;
      height: 100%;
   }
}

{{#each ctas}}
#cta-{{@index}} {
   top: {{this.percentage.position.y}}%;
   left: {{this.percentage.position.x}}%;
   width: {{this.percentage.size.width}}%;
   height: {{this.percentage.size.height}}%;
}

{{/each}}

@media screen and (min-width: 1024px) {
   #{{slideId}} {
      background-size: 100% 100%;
   }
}